# Nango Configuration
NANGO_SECRET_KEY=your_nango_secret_key_here
NANGO_PUBLIC_KEY=your_nango_public_key_here
NANGO_BASE_URL=https://api.nango.dev

# OpenAI Configuration (for code generation)
OPENAI_API_KEY=your_openai_api_key_here

# Application Configuration
APP_ENV=development
APP_HOST=localhost
APP_PORT=8000
LOG_LEVEL=INFO

# Database (if needed for storing integration metadata)
DATABASE_URL=sqlite:///./integrations.db

# Security
SECRET_KEY=your_secret_key_for_jwt_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional: Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com/webhooks
WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Redis (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0